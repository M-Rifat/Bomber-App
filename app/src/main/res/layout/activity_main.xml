<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="#250505"
    tools:context=".MainActivity">

        <TextView
            android:layout_width="220dp"
            android:layout_height="34dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/hexaframecf"
            android:gravity="top"
            android:text="@string/sexybomber"
            android:textAppearance="@style/sexybomber" />

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="256dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="37dp"
            android:fontFamily="@font/hexaframecf"
            android:gravity="center_horizontal|top"
            android:lineSpacingExtra="7sp"
            android:text="@string/developers_"
            android:textAppearance="@style/developers_"
            android:translationY="-3.6sp" />

        <LinearLayout
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="8.58dp"
                android:layout_height="15.02dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="#00000000"
                android:src="@drawable/number"
                android:translationY="-3.84sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="2dp"
                android:fontFamily="@font/hexaframecf"
                android:lineSpacingExtra="8sp"
                android:text="@string/mobile_numb"
                android:textAppearance="@style/mobile_numb"
                android:translationY="-3.84sp" />
        </LinearLayout>


        <EditText
            android:id="@+id/text1"
            android:layout_width="256dp"
            android:layout_height="37dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"

            android:background="@drawable/rectangle_1" />

        <LinearLayout
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="21dp"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="8.58dp"
                android:layout_height="15.02dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="#00000000"
                android:src="@drawable/amount"
                android:translationY="-3.84sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/hexaframecf"
                android:lineSpacingExtra="8sp"
                android:text="@string/amount"
                android:textAppearance="@style/amount"
                android:translationY="-3.84sp" />
        </LinearLayout>


        <EditText
            android:id="@+id/text2"
            android:layout_width="256dp"
            android:layout_height="37dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rectangle_1" />

    <ProgressBar
        android:id="@+id/pb"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:layout_marginTop="30dp"
        android:progressBackgroundTint="@android:color/white"
        android:progressTint="@color/purple_700"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        />

        <Button
            android:id="@+id/click"
            android:layout_width="183dp"
            android:layout_height="38dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="76dp"
            android:backgroundTint="#DE1E1E"
            android:fontFamily="@font/hexaframecf"
            android:text="ATTACK"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="italic" />

    </LinearLayout>

